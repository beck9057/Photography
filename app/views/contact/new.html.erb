<article class="pure-g-r">
	<h1 class="pure-u-1">Contact</h1>
	<section class="pure-u-1">
<%= form_for @message, :url => contact_path, :html => {:class => 'pure-form pure-form-stacked' } do |form|  %>
   
  <% if @message.errors.any? %>
    <div class="error pure-u-1">
      <h2><%= pluralize(@message.errors.count, "error") %> prevented the form from being submitted:</h2>

      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <fieldset class="fields">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, :class => "pure-input-1-3" %>
    </div>
    
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, :class => "pure-input-1-3" %>
    </div>
    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject, :class => "pure-input-1-3" %>
    </div>
    
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, :class => "pure-input-2-3" %>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Send", :class => "pure-button pure-button-primary" %>
  </fieldset>
<% end %>

	</section>
</article>