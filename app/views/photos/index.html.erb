<h1>Listing photos</h1>

<table>
  <thead>
    <tr>
      <th>Photographer</th>
      <th>Event</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
		<td><%= image_tag photo.image.url(:thumb) %></td>
        <td><%= photographer_name :id => photo.photographer_id %></td>
        <td><%= event_name :id => photo.event_id %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
